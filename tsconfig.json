{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "lib": ["es2015", "es2016", "es2017"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "./dist",
      "strict": true,
      "target": "ES5"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
